<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
    <profiles>
        <profile>
            <id>codeartifact</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <repositories>
                <repository>
                    <id>meshiq-releases</id>
                    <url>https://meshiq-592078199039.d.codeartifact.us-east-1.amazonaws.com/maven/releases/</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>meshiq-staging</id>
                    <url>https://meshiq-592078199039.d.codeartifact.us-east-1.amazonaws.com/maven/staging/</url>
                    <releases>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
                <repository>
                    <id>meshiq-snapshots</id>
                    <url>https://meshiq-592078199039.d.codeartifact.us-east-1.amazonaws.com/maven/snapshots/</url>
                    <releases>
                        <enabled>false</enabled>
                    </releases>
                    <snapshots>
                        <enabled>true</enabled>
                        <updatePolicy>always</updatePolicy>
                    </snapshots>
                </repository>
            </repositories>
            <properties>
                <altReleaseDeploymentRepository>meshiq-staging::https://meshiq-592078199039.d.codeartifact.us-east-1.amazonaws.com/maven/staging/</altReleaseDeploymentRepository>
                <altSnapshotDeploymentRepository>meshiq-snapshots::https://meshiq-592078199039.d.codeartifact.us-east-1.amazonaws.com/maven/snapshots/</altSnapshotDeploymentRepository>
            </properties>
        </profile>
    </profiles>
    <servers>
        <server>
            <id>meshiq-releases</id>
            <username>aws</username>
            <password>${env.CODEARTIFACT_AUTH_TOKEN}</password>
        </server>
        <server>
            <id>meshiq-staging</id>
            <username>aws</username>
            <password>${env.CODEARTIFACT_AUTH_TOKEN}</password>
        </server>
        <server>
            <id>meshiq-snapshots</id>
            <username>aws</username>
            <password>${env.CODEARTIFACT_AUTH_TOKEN}</password>
        </server>
    </servers>
